@model PINrad.Models.RegisterViewModel

@{
    ViewData["Title"] = "Registracija";
}

<h2>Registracija</h2>

<form asp-action="Register" method="post">
    <div class="form-group">
        <label asp-for="PunoIme"></label>
        <input asp-for="PunoIme" class="form-control" />
        <span asp-validation-for="PunoIme" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" class="form-control" type="password" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rola"></label>
        <input asp-for="Rola" class="form-control" type="password" />
        <span asp-validation-for="Rola" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Registracija</button>
</form>